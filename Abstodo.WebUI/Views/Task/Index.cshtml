@functions {
    public string GetPriorityClass(string priority)
    {
        switch (priority)
        {
            case "High":
                return "bg-danger";
            case "Middle":
                return "bg-warning";
            case "Low":
                return "bg-success";
            default:
                return string.Empty;
        }
    }
}
